@model ITI.ExamSystem.Models.User

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>
<p>Are you sure you want to delete this Student?</p>

<div>
	<h4>@Model.FullName</h4>
	<p>@Model.Email</p>

    <form asp-action="DeleteStudent" asp-route-id ="@Model.UserID" method="post">
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> 
        <a asp-action="ReadStudents" class="btn btn-secondary">Cancel</a>
    </form>
</div>





