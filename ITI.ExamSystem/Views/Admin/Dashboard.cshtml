        <!-- Create New Exam Section -->
        <div class="create-exam">
            <h3>Create New Exam</h3>
            <ul>
                <li>MCQ Exam</li>
                <li>Subjective Exam</li>
                <li>Mixed</li>
            </ul>
        </div>

        <!-- Exam Questions Section -->
        <div class="exam-questions">
