@model ITI.ExamSystem.Models.InstructorIndexViewModel

@{
    ViewData["Title"] = "Instructors";
    var i = 1;
}

<h2 class="mb-4">Instructors</h2>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Add Instructor</a>

<!-- Active Instructors Table -->
<h4>Active Instructors</h4>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Branch</th>
            <th>Track</th>
            <th>Intake</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ActiveInstructors)
        {
            <tr>
                <td>@i</td>
                <td>@item.User?.FullName</td>
                <td>@item.User?.Email</td>
                <td>@item.Branch?.BranchName</td>
                <td>@item.Track?.TrackName</td>
                <td>@item.Intake?.IntakeName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserID" class="btn btn-sm btn-warning me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Instructor pagination">
    <ul class="pagination justify-content-center">
        @for (int page = 1; page <= Model.TotalPages; page++)
        {
            <li class="page-item @(page == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(page)">@(page)</a>
            </li>
        }
    </ul>
</nav>



<!-- Deleted Instructors Table -->
@if (Model.DeletedInstructors.Any())
{
    <h4 class="mt-5">InActive Instructors</h4>
    <table class="table table-bordered table-striped">
        <thead class="table-secondary">
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int j = 1;
                foreach (var item in Model.DeletedInstructors)
                {
                    <tr>
                        <td>@j</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>
                            <form asp-action="Reactivate" asp-route-id="@item.UserID" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-success">Reactivate</button>
                            </form>
                        </td>
                    </tr>
                    j++;
                }
            }
        </tbody>
    </table>
}