@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();

    string searchAction = "SearchStudents"; // Default action

    if (currentAction == "instructors")
    {
        searchAction = "SearchInstructors";
    }
    else if (currentAction == "courses")
    {
        searchAction = "SearchCourses";
    }
    else if (currentAction == "questions")
    {
        searchAction = "SearchQuestions";
    }
	else if (currentAction == "readstudents")
	{
		searchAction = "SearchStudents";
	}
	else if (currentAction == "dashboard")
	{
		searchAction = "Dashboard";
	}
}


<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITI.ExamSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminDashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-p..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/ITI.ExamSystem.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    </head>

<body>
    <div class="admin-dashboard">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <h2>Exam <span class="portal">Portal</span></h2>
            </div>
            <ul>
                <li>
                    <a class="fas fa-th-large" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                </li>
                <li>
                    <a class=" fas fa-th-large" asp-controller="Admin" asp-action="ReadStudents">Students</a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Instructors">Instructors</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Courses">Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Questions">Questions</a>
                </li>
               
            </ul>
        </aside>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Header -->
            <div class="header">
                <div class="top-right">
                    <div class="search-bar">
                        <form asp-controller="Admin" asp-action="@searchAction" method="get" class="d-flex">
                            <input type="text" name="searchTerm" placeholder="Search..." class="form-control" value="@ViewBag.SearchTerm" />
                            <button type="submit"><i class="fas fa-search"></i></button>
                        </form>

                        <!-- Clear Search Button -->
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <a asp-controller="Admin" asp-action="ReadStudents" class="btn btn-danger ml-2">
                                <i class="fas fa-times"></i> Clear Search
                            </a>
                        }
                    </div>
                    <div class="user-profile">
                        <img src="~/images/user-avatar.jpg" alt="User Avatar" />
                        <span>John</span>
                    </div>

                </div>
            </div>

            <!-- Page Content -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top text-muted text-center p-2 mt-auto">
        &copy; 2025 - ITI.ExamSystem
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
