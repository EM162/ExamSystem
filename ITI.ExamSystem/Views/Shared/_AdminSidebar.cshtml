
@{
    ViewData["Title"] = "_AdminSidebar";
}

<!-- _AdminSidebar.cshtml -->
<aside class="sidebar" id="sidebar">
    <div class="logo">
        <h2>Exam <span class="portal">Portal</span></h2>
    </div>
    <nav>
        <ul>
            <li><a href="@Url.Action("Dashboard", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")"><i class="fas fa-th-large"></i> Overview</a></li>
            <li><a href="@Url.Action("Upcoming", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Upcoming" ? "active" : "")"><i class="fas fa-calendar-alt"></i> Upcoming</a></li>
            <li><a href="@Url.Action("Questions", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Questions" ? "active" : "")"><i class="fas fa-book"></i> Questions</a></li>
            <li><a href="@Url.Action("Marks", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Marks" ? "active" : "")"><i class="fas fa-trophy"></i> Marks</a></li>
            <li><a href="@Url.Action("Settings", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Settings" ? "active" : "")"><i class="fas fa-cog"></i> Settings</a></li>
            <li><a href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
        </ul>
    </nav>
</aside>

<div class="header">
    <div class="top-right">
        <div class="search-bar">
            <input type="text" placeholder="Search" />
            <button><i class="fas fa-search"></i></button>
        </div>
        <div class="user-profile">
            <img src="~/images/user-avatar.jpg" alt="User Avatar" />
            <span>John</span>
        </div>
    </div>
</div>