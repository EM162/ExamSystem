@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div style="margin: 40px auto; max-width: 1200px; text-align: center;">
        <h2 style="color: #333; margin-bottom: 30px;">Welcome to the ITI Exam System</h2>
        <p style="font-size: 1.1rem; color: #555; margin-bottom: 40px;">
            This platform helps streamline educational management for different user roles.
        </p>
        <p style="margin-top: 20px; font-size: 1.05rem; color: #555;">
            Use the sidebar to navigate your available features. Each role has specific permissions tailored to their responsibilities.
        </p>

        <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 30px;">

            <!-- Super Admin Card -->
            <div style="flex: 1 1 250px; background-color: #ffffff; padding: 20px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
                <h3 style="color: #6c63ff;">🛠️ Super Admin</h3>
                @* <p style="color: #444; font-size: 1rem; line-height: 1.6;"> *@
                @*     • Manage all branches globally.<br> *@
                @*     • Create admins and control access.<br> *@
                @*     • View global system analytics. *@
                @* </p> *@
            </div>

            <!-- Admin Card -->
            <div style="flex: 1 1 250px; background-color: #ffffff; padding: 20px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
                <h3 style="color: #6c63ff;">🔧 Admin</h3>
                @* <p style="color: #444; font-size: 1rem; line-height: 1.6;"> *@
                @*     • Manage instructors, students, and exams.<br> *@
                @*     • Assign roles and track intakes.<br> *@
                @*     • Operate within assigned branch scope. *@
                @* </p> *@
            </div>

            <!-- Instructor Card -->
            <div style="flex: 1 1 250px; background-color: #ffffff; padding: 20px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
                <h3 style="color: #6c63ff;">👨‍🏫 Instructor</h3>
                @* <p style="color: #444; font-size: 1rem; line-height: 1.6;"> *@
                @*     • Create and organize exams.<br> *@
                @*     • Add and edit course materials.<br> *@
                @*     • Track student progress and scores. *@
                @* </p> *@
            </div>

            <!-- Student Card -->
            <div style="flex: 1 1 250px; background-color: #ffffff; padding: 20px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">
                <h3 style="color: #6c63ff;">🎓 Student</h3>
                @* <p style="color: #444; font-size: 1rem; line-height: 1.6;"> *@
                @*     • View courses and profiles.<br> *@
                @*     • Take assigned exams.<br> *@
                @*     • Access results and feedback easily. *@
                @* </p> *@
            </div>

        </div>
    </div>



    <div style="margin-top: 40px; text-align: center; font-size: 1.3rem; color: #333;">
        <blockquote style="font-style: italic; color: #666;">
            “Education is the passport to the future, for tomorrow belongs to those who prepare for it today.”<br>
            <small>– Malcolm X</small>
        </blockquote>
    </div>

    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>
